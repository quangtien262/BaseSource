block pagetitle
    - pageTitle = 'Vector Maps'
block content
    .container-fluid
        .card
            .card-heading
                .pull-right
                    span.mr.text-muted Show last year events
                    label.switch.switch-info
                        input(type='checkbox')
                        span
                .card-title World Events
            .card-body
