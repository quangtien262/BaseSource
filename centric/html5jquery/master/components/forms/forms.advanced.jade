        .card
            .card-heading Calendar
            .card-body
                .row.text-center
                    .col-lg-4
                        #example-datepicker-1.ui-datepicker.datepicker-standalone.dp-theme-primary(data-date="12/13/2016")
                    .col-lg-4
                        #example-datepicker-2.ui-datepicker.datepicker-standalone.dp-theme-info(data-date="12/13/2016")
                    .col-lg-4
                        #example-datepicker-3.ui-datepicker.datepicker-standalone.dp-theme-pink(data-date="12/13/2016")
                h5 Popup
                #example-datepicker-container-4.rel-wrapper.ui-datepicker.ui-datepicker-popup.dp-theme-primary
                    .mda-form-control
                        input.form-control#example-datepicker-4(type="text", data-date="12/13/2016", placeholder="Select a date..")
                        .mda-form-control-line
                h5 Range
                #example-datepicker-container-5.rel-wrapper.ui-datepicker.ui-datepicker-popup.dp-theme-success
                    #example-datepicker-5.input-daterange.input-group.mda-input-group
                        .mda-form-control
