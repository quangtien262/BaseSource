                            .mda-form-control-line
                        span.input-group-addon to
                        .mda-form-control
                            input.form-control(type='text', name='end', value='02/12/2016')
                            .mda-form-control-line

        .card
            .card-heading Time picker
            .card-body
                .row
                    .col-lg-5
                        .mda-form-group.mda-input-group.clockpicker(data-autoclose='true')
                            .mda-form-control
                                input.form-control(type='text', value='09:30')
                                .mda-form-control-line
                            span.mda-input-group-addon
