extends ../core/core.layout
block pagetitle
    - pageTitle = 'Charts Radial'
block content
    .container-fluid

        h4.page-header.clearfix.mt0 Knob
        .row
            .col-lg-3.col-sm-6
                .card
                    .card-heading Default
                    .card-body.text-center
                        input#knob-chart1(type="text", value="80", data-max="100")
            .col-lg-3.col-sm-6
                .card
                    .card-heading Ready only
                    .card-body.text-center
                        input#knob-chart2(type="text", value="45", data-max="100")
            .col-lg-3.col-sm-6
                .card
                    .card-heading Offset and arc
                    .card-body.text-center
                        input#knob-chart4(type="text", value="20", data-max="100")
            .col-lg-3.col-sm-6
                .card
                    .card-heading Display previous
                    .card-body.text-center
                        input#knob-chart3(type="text", value="30", data-max="100")

        h4.page-header.clearfix Easypie Charts
        .row
            .col-lg-3.col-sm-6
                .card
                    .card-heading Default
                    .card-body.text-center
                        #easypiechart1.easypie-chart(data-percent='85')
                            span 85
            .col-lg-3.col-sm-6
                .card
                    .card-heading Slim
                    .card-body.text-center
                        #easypiechart2.easypie-chart(data-percent='45')
                            span 45
            .col-lg-3.col-sm-6
                .card
                    .card-heading Track color
                    .card-body.text-center
                        #easypiechart3.easypie-chart(data-percent='25')
                            span 25
            .col-lg-3.col-sm-6
                .card
                    .card-heading Scale color
                    .card-body.text-center
                        #easypiechart4.easypie-chart(data-percent='60')
                            span 60
